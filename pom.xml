    <profiles>
        <profile>
            <id>private-build</id>
            <activation>
                <property>
                    <name>!env.BUILD_NUMBER</name>
                </property>
            </activation>
            <properties>
                <build.number>Unknown</build.number>
                <git.hash>Unknown</git.hash>
            </properties>
        </profile>
        <profile>
            <id>Jenkins</id>
            <properties>
                <build.number>${env.BUILD_NUMBER}</build.number>
                <git.hash>${env.GIT_COMMIT}</git.hash>
            </properties>
        </profile>
